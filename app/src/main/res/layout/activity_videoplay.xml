<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_blue"
    tools:context=".videoPlay">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="28dp">


        <Button
            android:id="@+id/setting_type"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="70dp"
            android:background="@drawable/green_setting"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/ffhekaya_light"
            android:text="مشاهدة ممتعة ياصديقي"
            android:textColor="#FFFFFF"
            android:textSize="70sp" />

        <Button
            android:id="@+id/back_home"
            android:layout_width="42dp"
            android:layout_height="66dp"
            android:layout_marginLeft="130dp"
            android:background="@drawable/back_red"
            android:onClick="Home" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/videoplay_area"
        android:layout_width="450dp"
        android:layout_height="360dp"
        android:layout_below="@+id/linearLayout1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginEnd="68dp"
        android:layout_marginRight="68dp"
        android:background="@drawable/avatar_area_blue"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <VideoView
            android:id="@+id/realVideo"
            android:layout_width="407dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/playingButtons"
            android:layout_width="297dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:gravity="center|center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/backwordVid"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/video_backword"
                android:onClick="BackwordButton" />

            <Button
                android:id="@+id/pauseVid"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/pause"
                android:onClick="pauseButton" />

            <Button
                android:id="@+id/playVid"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/video_play"
                android:onClick="playButton" />

            <Button
                android:id="@+id/forword"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/video_forward"
                android:onClick="forwordButton" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/avatarArea_video"
        android:layout_width="350dp"
        android:layout_height="360dp"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginStart="70dp"
        android:background="@drawable/avatar_area_blue"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <VideoView
            android:id="@+id/AvatarVideo"
            android:layout_width="310dp"
            android:layout_height="321dp"
            android:layout_gravity="center|center_horizontal|center_vertical" />

    </LinearLayout>



</RelativeLayout>