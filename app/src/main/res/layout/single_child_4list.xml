<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:padding="5dp"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="298dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical"
        android:padding="8dp">


        <LinearLayout
            android:id="@+id/lin1"
            android:layout_width="290dp"
            android:layout_height="52dp"
            android:layout_marginTop="1dp"
            android:gravity="right"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/childName_textView"
                android:layout_width="115dp"
                android:layout_height="50dp"
                android:layout_marginRight="25dp"
                android:fontFamily="@font/ffhekaya_light"
                android:text="رهف  "
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <ImageButton
                android:id="@+id/smileyFace_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/face"
                android:focusable="false"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="277dp"
            android:layout_height="140dp"
            android:layout_below="@+id/lin1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="-4dp"
            android:gravity="right"
            android:orientation="vertical">

            <Button
                android:id="@+id/play_listButton"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:background="#00FFFFFF"
                android:fontFamily="@font/ffhekaya_light"
                android:text="قائمة التشغيل"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:focusable="false"/>

            <Button
                android:id="@+id/setting_forAchild"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:background="#00FFFFFF"
                android:fontFamily="@font/ffhekaya_light"
                android:text="الإعدادات "
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:focusable="false"/>

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>