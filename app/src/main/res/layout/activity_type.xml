<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_green"
    tools:context=".type">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="28dp">


        <Button
            android:id="@+id/setting_type"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="70dp"
            android:background="@drawable/green_setting"
            android:visibility="invisible"
            tools:visibility="invisible" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/ffhekaya_light"
            android:text="ماذا تكتب يا صديقي؟ "
            android:textColor="#FFFFFF"
            android:textSize="70sp" />

        <Button
            android:id="@+id/back_home"
            android:layout_width="42dp"
            android:layout_height="66dp"
            android:layout_marginLeft="150dp"
            android:background="@drawable/back_purple"
            android:onClick="BackButton" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/textarea_linLayout"
        android:layout_width="547dp"
        android:layout_height="240dp"
        android:layout_marginStart="400dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/text_area_green"
        android:orientation="vertical"
        android:padding="8dp">


        <EditText
            android:id="@+id/Tayping"
            android:layout_width="536dp"
            android:layout_height="222dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/ffhekaya_light"
            android:inputType="textMultiLine"
            android:textAlignment="center"
            android:textColor="#347736"
            android:textSize="60sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/avatarArea_linLayout"
        android:layout_width="340dp"
        android:layout_height="340dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/avatar_area_green"
        android:orientation="vertical"
        android:padding="8dp" >

        <VideoView
            android:id="@+id/video_view_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="538dp"
        android:layout_height="173dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="38dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="464dp"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:padding="8dp">

            <Button
                android:id="@+id/repeat_sign"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/repeat_yellow"
                android:onClick="repeatSign" />

            <Button
                android:id="@+id/empty_textArea"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="72dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/stop_red"
                android:onClick="ResetText" />

            <Button
                android:id="@+id/accept_text"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="72dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/blue_tick"
                android:onClick="translate_word" />

        </LinearLayout>

        <TextView
            android:id="@+id/errrrror"
            android:layout_width="469dp"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/ffhekaya_light"
            android:text="خطأ"
            android:layout_marginStart="5dp"
            android:textAlignment="center"
            android:textColor="#F85171"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>