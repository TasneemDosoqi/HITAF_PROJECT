<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_red"
    tools:context=".Home">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="28dp">


        <Button
            android:id="@+id/setting_type"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="70dp"
            android:background="@drawable/green_setting"
            android:onClick="sittingButton"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/ffhekaya_light"
            android:text="ماذا نفعل يا صديقي؟ "
            android:textColor="#FFFFFF"
            android:textSize="70sp" />

        <Button
            android:id="@+id/back_home"
            android:layout_width="42dp"
            android:layout_height="66dp"
            android:layout_marginLeft="200dp"
            android:background="@drawable/back_yellow"
            android:onClick="childList" />


    </LinearLayout>

    <FrameLayout
        android:id="@+id/vedio_linLayout"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:padding="8dp">

        <VideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />
    </FrameLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="1110dp"
        android:layout_height="144dp"
        android:layout_below="@+id/vedio_linLayout"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:padding="8dp">

        <Button
            android:id="@+id/repeat_sign"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="305dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/square_pistachio"
            android:onClick="videoButton" />

        <Button
            android:id="@+id/empty_textArea"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/speak_square_purple"
            android:onClick="talkButton" />

        <Button
            android:id="@+id/accept_text"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/write_square_blue"
            android:onClick="typingButton" />
    </LinearLayout>

</RelativeLayout>