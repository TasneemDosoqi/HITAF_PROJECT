<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_red"
    tools:context=".Home">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="139dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="28dp">


        <Button
            android:id="@+id/setting_type"
            android:layout_width="113.69dp"
            android:layout_height="113.69dp"
            android:layout_marginLeft="70dp"
            android:background="@drawable/green_setting"
            android:onClick="click" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/ffhekaya_light"
            android:text="ماذا نفعل يا صديقي؟ "
            android:textColor="#FFFFFF"
            android:textSize="100sp" />

        <Button
            android:id="@+id/back_home"
            android:layout_width="59.12dp"
            android:layout_height="103.69dp"
            android:layout_marginLeft="180dp"
            android:background="@drawable/back_yellow" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/vedio_linLayout"
        android:layout_width="387dp"
        android:layout_height="387dp"
        android:layout_below="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:padding="8dp">

        <VideoView
            android:id="@+id/your_video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="1110dp"
        android:layout_height="144dp"
        android:layout_below="@+id/vedio_linLayout"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:padding="8dp">

        <Button
            android:id="@+id/repeat_sign"
            android:layout_width="113.69dp"
            android:layout_height="113.69dp"
            android:layout_marginLeft="305dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/square_pistachio" />

        <Button
            android:id="@+id/empty_textArea"
            android:layout_width="113.69dp"
            android:layout_height="113.69dp"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/speak_square_purple" />

        <Button
            android:id="@+id/accept_text"
            android:layout_width="113.69dp"
            android:layout_height="113.69dp"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/write_square_blue" />
    </LinearLayout>

</RelativeLayout>