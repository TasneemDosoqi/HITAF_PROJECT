<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_dark_green"
    tools:context=".setting">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/background_setting">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="953dp"
            android:layout_height="140dp"
            android:layout_marginTop="28dp">

            <Button
                android:id="@+id/back_home"
                android:layout_width="42dp"
                android:layout_height="40dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/back_yellow_reverse"
                android:onClick="backToHome" />


            <RelativeLayout
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="200dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageUpdated"
                    android:layout_width="182dp"
                    android:layout_height="126dp"
                    android:src="@drawable/green_user_pic"
                    app:civ_border_color="#0B917C"
                    app:civ_border_width="3dp" />

                <Button
                    android:id="@+id/add_ChildPic"
                    android:layout_width="47dp"
                    android:layout_height="54dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="78dp"
                    android:layout_marginBottom="100dp"
                    android:background="@drawable/add_pic_yellow"
                    android:onClick="onImageClicked" />


            </RelativeLayout>


            <TextView
                android:id="@+id/textView1"
                android:layout_width="163dp"
                android:layout_height="58dp"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/ffhekaya_light"
                android:text="صورة الطفل: "
                android:textColor="#FFFFFF"
                android:textSize="40sp" />


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/table"
            android:layout_width="698dp"
            android:layout_height="262dp"
            android:layout_below="@+id/linearLayout1"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp">

            <LinearLayout
                android:id="@+id/lin1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/child_name"
                    android:layout_width="336dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="190dp"
                    android:background="@drawable/rounded_edittext"
                    android:inputType="text"
                    android:padding="12dp"
                    android:textColor="#138169" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="66dp"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/ffhekaya_light"
                    android:text="الإسم: "
                    android:textColor="#FFFFFF"
                    android:textSize="40sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin1"
                android:layout_marginTop="1dp">

                <EditText
                    android:id="@+id/child_age"
                    android:layout_width="337dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="190dp"
                    android:background="@drawable/rounded_edittext"
                    android:inputType="number"
                    android:padding="12dp"
                    android:textColor="#138169" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="76dp"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/ffhekaya_light"
                    android:text="العمر: "
                    android:textColor="#FFFFFF"
                    android:textSize="40sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/genderMF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin2">

                <RadioGroup
                    android:id="@+id/radioSex"
                    android:layout_width="300dp"
                    android:layout_height="66dp"
                    android:layout_marginLeft="200dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioMale"
                        style="@style/MyCustomRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_gravity="start"
                        android:layout_marginRight="90dp"
                        android:buttonTint="#0B917C"
                        android:layoutDirection="rtl"
                        android:minWidth="90dp"
                        android:text="ذكر"
                        android:textAlignment="textStart"
                        android:textColor="#FFFFFF"
                        android:textSize="40sp" />

                    <RadioButton
                        android:id="@+id/radioFemale"
                        style="@style/MyCustomRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_gravity="start"
                        android:buttonTint="#0B917C"
                        android:layoutDirection="rtl"
                        android:minWidth="90dp"
                        android:text="أنثى"
                        android:textAlignment="textStart"
                        android:textColor="#FFFFFF"
                        android:textSize="40sp" />


                </RadioGroup>


                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="66dp"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/ffhekaya_light"
                    android:text="الجنس: "
                    android:textColor="#FFFFFF"
                    android:textSize="40sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin33"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/genderMF">


                <TextView
                    android:id="@+id/errorS"
                    android:layout_width="849dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="95dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/ffhekaya_light"
                    android:text="خطأ"
                    android:textColor="#F85171"
                    android:textSize="30sp" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lin3"
            android:layout_width="712dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/table"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp">


            <Button
                android:id="@+id/editBtn"
                android:layout_width="197dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/button_yellow"
                android:fontFamily="@font/ffhekaya_light"
                android:onClick="onUpdateClicked"
                android:layout_marginStart="300dp"
                android:text="تحديث"
                android:textColor="#CF8316"
                android:textSize="30sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="953dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin3"
            >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="66dp"
                android:layout_marginLeft="490dp"
                android:fontFamily="@font/ffhekaya_light"
                android:text="حذف حساب الطفل "
                android:textColor="#BA0C49"
                android:textSize="30sp" />

            <Button
                android:id="@+id/delete_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/stop_red"
                android:onClick="onClickDeleteBtn" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin4"
            android:layout_width="213dp"
            android:layout_height="299dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="11dp"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">


            </androidx.recyclerview.widget.RecyclerView>

             


        </LinearLayout>


        <LinearLayout
            android:layout_width="268dp"
            android:layout_height="196dp"
            android:layout_below="@+id/lin4"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="41dp"
            android:gravity="right"
            android:orientation="vertical">

            <Button
                android:id="@+id/addChild_button"
                android:layout_width="175dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/add_child_yellow"
                android:onClick="toAddChild" />

            <Button
                android:id="@+id/change_password"
                android:layout_width="175dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/change_password"
                android:onClick="resetPassword" />

            <Button
                android:id="@+id/signout_button"
                android:layout_width="172dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/sign_out" />

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
