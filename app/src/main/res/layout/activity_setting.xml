<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_dark_green"
    tools:context=".setting">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/background_setting"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="953dp"
            android:layout_height="307dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="327dp"
            android:layout_marginRight="327dp">

            <Button
                android:id="@+id/back_home"
                android:layout_width="38.77dp"
                android:layout_height="68dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/back_yellow_reverse" />


            <RelativeLayout
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="50dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/green_user_pic"
                    app:civ_border_color="#0B917C"
                    app:civ_border_width="3dp" />

                <Button
                    android:id="@+id/add_ChildPic"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/add_pic_yellow"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true" />


            </RelativeLayout>


            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="66dp"
                android:layout_marginLeft="140dp"
                android:layout_marginRight="74dp"
                android:fontFamily="@font/ffhekaya_light"
                android:text="صورة الطفل: "
                android:textColor="#FFFFFF"
                android:textSize="40sp" />


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/table"
            android:layout_width="934dp"
            android:layout_height="203dp"
            android:layout_below="@+id/linearLayout1"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:id="@+id/lin1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <EditText
                    android:id="@+id/child_name"
                    android:layout_width="366dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="190dp"
                    android:background="@drawable/rounded_edittext"
                    android:inputType="text"
                    android:padding="12dp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="66dp"
                    android:layout_marginRight="95dp"
                    android:fontFamily="@font/ffhekaya_light"
                    android:text="الإسم: "
                    android:textColor="#FFFFFF"
                    android:textSize="40sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin1"
                android:layout_marginTop="1dp"
                android:gravity="right">

                <EditText
                    android:id="@+id/child_age"
                    android:layout_width="366dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="200dp"
                    android:background="@drawable/rounded_edittext"
                    android:inputType="text"
                    android:padding="12dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="66dp"
                    android:layout_marginRight="95dp"
                    android:fontFamily="@font/ffhekaya_light"
                    android:text="العمر: "
                    android:textColor="#FFFFFF"
                    android:textSize="40sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin2"
                android:gravity="right">

                <RadioGroup
                    android:id="@+id/radioSex"
                    android:layout_width="367dp"
                    android:layout_height="66dp"
                    android:layout_marginRight="190dp"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioMale"
                        style="@style/MyCustomRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_gravity="start"
                        android:layout_marginRight="90dp"
                        android:buttonTint="#0B917C"
                        android:layoutDirection="rtl"
                        android:minWidth="90dp"
                        android:text="ذكر"
                        android:textAlignment="textStart"
                        android:textColor="#FFFFFF"
                        android:textSize="40sp" />

                    <RadioButton
                        android:id="@+id/radioFemale"
                        style="@style/MyCustomRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_gravity="start"
                        android:buttonTint="#0B917C"
                        android:layoutDirection="rtl"
                        android:minWidth="90dp"
                        android:text="أنثى"
                        android:textAlignment="textStart"
                        android:textColor="#FFFFFF"
                        android:textSize="40sp" />


                </RadioGroup>


                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="66dp"
                    android:layout_marginRight="95dp"
                    android:fontFamily="@font/ffhekaya_light"
                    android:text="الجنس: "
                    android:textColor="#FFFFFF"
                    android:textSize="40sp" />

            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lin3"
            android:layout_width="953dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/table"
            android:gravity="center">


            <Button
                android:id="@+id/cancle_button"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginRight="70dp"
                android:background="@drawable/cancle_red_button" />

            <Button
                android:id="@+id/save"
                android:layout_width="300dp"
                android:layout_height="67dp"
                android:layout_marginRight="0dp"
                android:background="@drawable/save_yellow_button" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="953dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin3"
            android:layout_marginTop="12dp"
            android:gravity="right">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="66dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/ffhekaya_light"
                android:text="حذف حساب الطفل "
                android:textColor="#BA0C49"
                android:textSize="40sp" />

            <Button
                android:id="@+id/delete_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="175dp"
                android:background="@drawable/stop_red" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin4"
            android:layout_width="298dp"
            android:layout_height="453dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="11dp"
            android:orientation="vertical">

            <ListView
                android:id="@+id/listMenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/lytSearch"
                android:background="#00FDFDFD"
                android:divider="@null"
                android:padding="5dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="298dp"
            android:layout_height="251dp"
            android:layout_below="@+id/lin4"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="13dp"
            android:gravity="right"
            android:orientation="vertical">

            <Button
                android:id="@+id/addChild_button"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/add_child_yellow" />

            <Button
                android:id="@+id/change_password"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/change_password" />

            <Button
                android:id="@+id/signout_button"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/sign_out" />

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>