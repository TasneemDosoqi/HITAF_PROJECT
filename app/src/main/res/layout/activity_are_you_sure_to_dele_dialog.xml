<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".areYouSureToDeleDialog">

    <LinearLayout
        android:layout_width="549dp"
        android:layout_height="372dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="63dp"
        android:background="@drawable/are_you_sure" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="416dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:fontFamily="@font/ffhekaya_light"

        android:text="هل أنت متأكد من حذف حساب الطفل ؟"
        android:textColor="#D16C00"
        android:textSize="35dp" />


    <Button
        android:id="@+id/yesdeleteit"
        android:layout_width="177dp"
        android:layout_height="62dp"
        android:layout_marginStart="290dp"
        android:layout_marginTop="340dp"
        android:background="@drawable/lock_key"
        android:fontFamily="@font/ffhekaya_light"
        android:text="حذف "
        android:textColor="#D16C00"
        android:textSize="40dp" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="200dp"
        android:layout_height="63dp"
        android:background="@drawable/cancel_key"
        android:layout_marginTop="340dp"
        android:layout_marginStart="70dp"
        android:text="إلغاء"
        android:fontFamily="@font/ffhekaya_light"
        android:textSize="40dp"
        android:textColor="#AA0038"

        />
</RelativeLayout>