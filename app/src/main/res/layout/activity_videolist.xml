<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_blue"
    tools:context=".videoList">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="28dp">


        <Button
            android:id="@+id/setting_type"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="70dp"
            android:background="@drawable/green_setting"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/ffhekaya_light"
            android:text="ماذا تريد ان تشاهد ياصديقي؟"
            android:textColor="#FFFFFF"
            android:textSize="70sp" />

        <Button
            android:id="@+id/back_home"
            android:layout_width="42dp"
            android:layout_height="66dp"
            android:layout_marginLeft="70dp"
            android:background="@drawable/back_red"
            android:onClick="Home" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/textarea_linLayout"
        android:layout_width="740dp"
        android:layout_height="346dp"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginEnd="59dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/video_list_area"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:padding="8dp" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <VideoView
                android:id="@+id/video1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:clickable="true"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/TVideo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/ffhekaya_light"
                android:text="الألوان"
                android:textAlignment="center"
                android:textColor="#03A9F4"
                android:textSize="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <VideoView
                android:id="@+id/video2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:clickable="true"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/TVideo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/ffhekaya_light"
                android:text="الحيوانات"
                android:textAlignment="center"
                android:textColor="#03A9F4"
                android:textSize="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <VideoView
                android:id="@+id/video3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:clickable="true"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/TVideo3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/ffhekaya_light"
                android:text="الأرقام"
                android:textAlignment="center"
                android:textColor="#03A9F4"
                android:textSize="40dp">

            </TextView>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>