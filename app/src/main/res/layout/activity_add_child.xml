<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_dark_green"
    tools:context=".addChild">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/background_setting"
        android:layout_alignParentLeft="true">



        <RelativeLayout
            android:id="@+id/table"
            android:layout_width="934dp"
            android:layout_height="230dp"
            android:layout_below="@+id/linearLayout1"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="50dp">

            <LinearLayout
                android:id="@+id/lin0"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/lin2"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/videofromComp"
                    android:layout_width="608dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginRight="30dp"
                    app:srcCompat="@drawable/videofromcompubtn" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="76dp"
                    android:layout_marginRight="100dp"
                    android:fontFamily="@font/ffhekaya_light"
                    android:text="المُعرض: "
                    android:textColor="#FFFFFF"
                    android:textSize="40sp"
                    android:paddingLeft="30dp"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin1"
                android:layout_width="wrap_content"
                android:layout_height="66dp"
                android:gravity="right">

                <Button
                    android:id="@+id/back_home"
                    android:layout_width="38.77dp"
                    android:layout_height="68dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/back_yellow_reverse" />




            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin1"
                android:layout_marginTop="5dp"
                android:gravity="right">



                <EditText
                    android:id="@+id/child_name"
                    android:layout_width="366dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="172dp"
                    android:background="@drawable/rounded_edittext"
                    android:inputType="text"
                    android:padding="12dp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="66dp"
                    android:layout_marginRight="95dp"
                    android:fontFamily="@font/ffhekaya_light"
                    android:text="رابط الفيديو:: "
                    android:textColor="#FFFFFF"
                    android:textSize="40sp" />



            </LinearLayout>




        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lin3"
            android:layout_width="953dp"
            android:layout_height="120dp"
            android:layout_below="@+id/table"
            android:gravity="center">


            <Button
                android:id="@+id/cancle_button"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginRight="70dp"
                android:background="@drawable/cancle_red_button" />

            <Button
                android:id="@+id/save"
                android:layout_width="300dp"
                android:layout_height="67dp"
                android:layout_marginRight="0dp"
                android:background="@drawable/save_yellow_button" />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/lin4"
            android:layout_width="298dp"
            android:layout_height="453dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="11dp"
            android:orientation="vertical">

            <ListView
                android:id="@+id/listMenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/lytSearch"
                android:background="#00FDFDFD"
                android:divider="@null"
                android:padding="5dp" />

        </LinearLayout>


        <LinearLayout

            android:layout_width="298dp"
            android:layout_height="251dp"
            android:layout_below="@+id/lin4"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="13dp"
            android:gravity="right"
            android:orientation="vertical">

            <Button
                android:id="@+id/addChild_button"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/add_child_yellow" />

            <Button
                android:id="@+id/change_password"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/change_password" />

            <Button
                android:id="@+id/signout_button"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/sign_out" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="953dp"
            android:layout_height="510dp"
            android:orientation="vertical"
            android:layout_below="@id/lin3"
            android:layout_marginBottom="50dp"
            >


            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="5dp"
                app:srcCompat="@drawable/bordervideo" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>