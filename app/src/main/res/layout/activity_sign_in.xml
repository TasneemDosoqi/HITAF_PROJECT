<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignIn"
    android:background="@drawable/background_purple">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/aboutUsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="850dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/aboutus"
            android:onClick="aboutUs"
            android:text="" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/password"
            android:layout_marginStart="570dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="199dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/hekaya_font"
            android:paddingLeft="95dp"
            android:text="البريد الالكتروني: "
            android:textColor="#FFFFFF"
            android:textSize="40dp" />

        <EditText
            android:id="@+id/edit_username"
            android:layout_width="364dp"
            android:layout_height="50dp"
            android:layout_marginStart="200dp"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="-70dp"
            android:background="@drawable/edit_round"
            android:inputType="textPersonName"
            android:text=""
            android:textAlignment="center"
            android:textColor="#9B2CDD" />
        <TextView
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="700dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="199dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/hekaya_font"
            android:text="كلمة المرور :"
            android:textColor="#FFFFFF"
            android:textSize="40dp" />

        <EditText
            android:id="@+id/edit_password"
            android:layout_width="364dp"
            android:layout_height="50dp"
            android:layout_marginStart="200dp"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="-61dp"
            android:background="@drawable/edit_round"
            android:ems="10"
            android:inputType="textPassword"
            android:text=""
            android:textAlignment="center"
            android:textColor="#9B2CDD" />
        <TextView
            android:id="@+id/forgot_password"
            android:layout_width="174dp"
            android:layout_height="35dp"
            android:layout_marginStart="300dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="180dp"
            android:layout_marginRight="180dp"
            android:layout_marginBottom="149dp"
            android:clickable="true"
            android:fontFamily="@font/hekaya_font"
            android:gravity="center"
            android:onClick="reset"
            android:text="@string/underline"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/error_messages"
            android:layout_width="350dp"
            android:layout_height="35dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="-150dp"
            android:layout_marginEnd="100dp"
            android:layout_marginRight="280dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/hekaya_font"
            android:gravity="center"
            android:text="خطأ"
            android:textAlignment="center"
            android:textColor="#FFC107"
            android:textSize="25sp" />
        <Button
            android:id="@+id/signinBtn"
            android:layout_width="228dp"
            android:layout_height="68dp"
            android:layout_marginStart="280dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/signin"
            android:fontFamily="@font/hekaya_font"
            android:text="تسجيل دخول"
            android:textColor="#D16C00"
            android:textSize="40dp" />
        <TextView
            android:id="@+id/NewUser"
            android:layout_width="260dp"
            android:layout_height="45dp"
            android:layout_marginStart="250dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/hekaya_font"
            android:onClick="newUser"
            android:text="مستخدم جديد؟ إنشاء حساب"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />
    </LinearLayout>
</RelativeLayout>
