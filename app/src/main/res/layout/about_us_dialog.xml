<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">




    <LinearLayout
        android:layout_width="690dp"
        android:layout_height="380dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="63dp"
        android:background="@drawable/are_you_sure" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="476dp"
        android:layout_height="71dp"
        android:layout_marginStart="110dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:fontFamily="@font/ffhekaya_light"
        android:text="هل أنت متأكد من حذف حساب الطفل ؟"
        android:textColor="#D16C00"
        android:textSize="40dp" />



    <Button
        android:id="@+id/Unlock"
        android:layout_width="230dp"
        android:layout_height="63dp"
        android:background="@drawable/lock_key"
        android:layout_marginTop="340dp"
        android:layout_marginStart="270dp"
        android:text="حذف "
        android:fontFamily="@font/ffhekaya_light"
        android:textSize="40dp"
        android:textColor="#D16C00"/>

    <Button
        android:id="@+id/Cancel"
        android:layout_width="200dp"
        android:layout_height="63dp"
        android:background="@drawable/cancel_key"
        android:layout_marginTop="340dp"
        android:layout_marginStart="50dp"
        android:text="إلغاء"
        android:fontFamily="@font/ffhekaya_light"
        android:textSize="40dp"
        android:textColor="#AA0038"

        />

</RelativeLayout>