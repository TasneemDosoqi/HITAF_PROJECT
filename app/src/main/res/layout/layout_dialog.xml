<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="63dp"
        android:background="@drawable/edit_round1">


        <TextView
            android:id="@+id/textView"
            android:layout_width="174dp"
            android:layout_height="58dp"
            android:layout_marginStart="300dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="55dp"
            android:layout_marginRight="55dp"
            android:fontFamily="@font/ffhekaya_light"
            android:text="البريد الالكتروني:"
            android:textColor="#D16C00"
            android:textSize="35dp" />


        <EditText
            android:id="@+id/resetPass_email"
            android:layout_width="276dp"
            android:layout_height="40dp"
            android:layout_marginStart="-500dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/edit_round1"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textColor="#1a0306" />

        <Button
            android:id="@+id/sendEmail"
            android:layout_width="267dp"
            android:layout_height="63dp"
            android:layout_marginStart="-190dp"
            android:layout_marginLeft="-40dp"
            android:layout_marginTop="160dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/send_email"
            android:fontFamily="@font/ffhekaya_light"
            android:onClick="clickSend"
            android:text="إرسال إلى البريد الالكتروني"
            android:textColor="#D16C00"
            android:textSize="25dp" />
    </LinearLayout>

</RelativeLayout>